{\pard\intbl\ql {{\b0\i0\scaps0\f3 $\\prod_\{\\alpha \\in A\} X_\\alpha$}}\cell}
{\pard\intbl\ql {{{\field{\*\fldinst{ EQ  \\i \\pr({\u945*}{\f5\u8712*}{\i A},, ){\i X}\\s\\do4({\fs15 {\u945*}})}}{\fldrslt }}
}}\cell}
